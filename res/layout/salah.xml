<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background ="@drawable/bunga3"
    android:orientation="vertical" >

    <TextView
 		android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:text="MAAF JAWABAN ANDA SALAH, ANDA BELUM BERUNTUNG JADI COBA LAGI +_+!!"
        android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center"/>

    <ImageView
              android:id="@+id/gambar"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="0.67"
        android:src="@drawable/salah" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="#2fbb28"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/a"
        android:onClick="kembali"
        android:text="Kembali Ke Menu Utama" 
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold|italic"
        android:typeface="serif" />

</LinearLayout>